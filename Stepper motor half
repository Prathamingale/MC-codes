#include<reg51.h>

void TIMIDelay(void) //To create a delay of 200 ms using TI Timer and MI Mode

1unsigned int x:for (x = 0; x < 20; x + 1)

TMOD=Cx10;

THI=0xDB;

TL1=0xFF;

TRl = 1

While ( TF |=0)

TRI 1 =0:

TF * 1 = 0

}

}

void main()

1

while (1)

P1= 0 * 8 :TIMIDelay();//P10000 1000 First Step

1 = 0 * 0CTIMIDelay();

//P10000 1100 Second Step

P 1=0x04TIMIDelay();

// P 1=0000 0100 Third Step

P! = 0 * 6TIMIDelay();

// P 1=0000 0110 Fourth Step

P 1=0x02TIMIDelay();

// P 1=0000 0010 Fifth Step

P * 1 = 0 * 3TIMIDelay();

l / P * l = 0 0011 Sixth Step

P * 1 = 0 * 1TIMIDelay();

// P 1=0000 0001 Seventh Step

P * 1 = 0 * 9TIMIDelay();

// P * 1 = 0 1001 Eight Step
